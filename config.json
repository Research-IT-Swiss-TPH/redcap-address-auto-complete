{
    "name": "Address Auto Complete",

    "namespace": "STPH\\addressAutoComplete", 

    "description": "<b>Please note that currently supported countries are: Switzerland, United Kingdom.</b><br>Easily create Auto-Complete Address fields that fetch results from APIs. Additionally, save geo data in custom variables and adjust the format of the address label.",

    "documentation": "README.md",

    "authors": [
        {
             "name": "Ekin Tertemiz",
             "email": "ekin.tertemiz@swisstph.ch",
             "institution": "Swiss Tropical And Public Health Institute (STPH)"
         }
     ],

    "framework-version": 6,

    "permissions": [
        "redcap_every_page_top",
        "redcap_survey_page_top",
        "redcap_module_configuration_settings"
    ],

    "enable-every-page-hooks-on-system-pages": false,

    "links":{
    },

    "no-auth-pages": [
        "gateway"
    ],

    "system-settings": [],

    "project-settings": [
        {
            "key": "api-source",
            "type": "dropdown",
            "name": "<b>API Source</b>",
            "choices": [
                {
                    "name": "geo.admin.ch",
                    "value": "geo.admin.ch"
                },
                {
                    "name": "getaddress.io",
                    "value": "getaddress.io"
                },                
                {
                    "name": "your.api.here",
                    "value": "your.api.here"
                }
            ],
            "required": true
        },
        {
            "key": "api-description",
            "type": "descriptive",
            "name": "",
            "branchingLogic": {
                "field": "api-source",
                "op": "<>",
                "value": ""
            }

        },
        {
            "key": "api-limit",
            "type": "text",
            "name": "API Response Limit<br><small>Defines how may results are returned per search request. This can significantly affect performance. Default and maximum are set to <code>20</code>.</small>",
            "branchingLogic": {
                "field": "api-source",
                "op": "<>",
                "value": ""
            }
        },
        {
            "key": "api-key",
            "type": "text",
            "name": "API Key<br><small>For some API sources an API key may be mandatory hence the module will not work without a proper key. Read more about key necessity on the API source documentation</small>",
            "branchingLogic": {
                "field": "api-source",
                "op": "<>",
                "value": ""
            }
        },        
        {
            "key": "enable-for-data-entry",
            "type": "checkbox",
            "name": "Enable for Data Entry",
            "branchingLogic": {
                "field": "api-source",
                "op": "<>",
                "value": ""
            }
        },
        {
            "key": "enable-for-survey",
            "type": "checkbox",
            "name": "Enable for Survey",
            "branchingLogic": {
                "field": "api-source",
                "op": "<>",
                "value": ""
            }
        },
        {
            "key": "enable-advanced-save",
            "type": "checkbox",
            "name": "Enable advanced save"
        },
        {
            "key": "target-fields",
            "type": "sub_settings",
            "name": "Instruction",
            "repeatable": true,
            "branchingLogic": {
                "field": "api-source",
                "op": "<>",
                "value": ""
            },            
            "sub_settings": [
                {
                    "key": "target-field",
                    "type": "field-list",
                    "name": "<b>Target Field</b><br>Select target field to be transformed into Address Auto-Complete",
                    "required": true
                },
                {
                    "key": "field-street",
                    "name": "<i>Street</i>",
                    "type": "field-list",
                    "required": true,
                    "branchingLogic": {
                        "field": "enable-advanced-save",
                        "op": "=",
                        "value": 1
                    }
                },
                {
                    "key": "field-number",
                    "name": "<i>Number</i>",
                    "type": "field-list",
                    "required": true,
                    "branchingLogic": {
                        "field": "enable-advanced-save",
                        "op": "=",
                        "value": 1
                    }
                },
                {
                    "key": "field-code",
                    "name": "<i>Post Code</i>",
                    "type": "field-list",
                    "required": true,
                    "branchingLogic": {
                        "field": "enable-advanced-save",
                        "op": "=",
                        "value": 1
                    }
                },
                {
                    "key": "field-city",
                    "name": "<i>City</i>",
                    "type": "field-list",
                    "required": true,
                    "branchingLogic": {
                        "field": "enable-advanced-save",
                        "op": "=",
                        "value": 1
                    }
                },
                {
                    "key": "field-country",
                    "name": "<i>Country</i>",
                    "type": "field-list",
                    "required": false,
                    "branchingLogic": {
                        "field": "enable-advanced-save",
                        "op": "=",
                        "value": 1
                    }
                },
                {
                    "key": "field-note",
                    "name": "<i>Note(s)</i>",
                    "type": "field-list",
                    "required": false,
                    "branchingLogic": {
                        "field": "enable-advanced-save",
                        "op": "=",
                        "value": 1
                    }
                },        
                {
                    "key": "target-meta",
                    "type": "field-list",
                    "name": "Target Meta<br>Select meta field where additional geo information should be saved",
                    "branchingLogic": {
                        "field": "target-field",
                        "op": "<>",
                        "value": ""
                    }
                }
            ]
        },
        {
            "key": "output-format",
            "type": "string",
            "name": "Custom output format<br>Use <i>%PLACEHOLDER%</i> to refer to address parts.<br><i>Default: <code>%STREET% %NUMBER%, %CODE% %CITY%</code></i><br><b style='color:red;'>Currently, not supported with secondary actions.</b>",
            "branchingLogic": {
                "conditions": [
                    {
                     "field": "api-source",
                     "op": "<>",
                     "value": ""
                    },
                    {
                     "field": "target-field",
                     "op": "<>",
                     "value": ""
                    }
                ]
            }
        },
        {
            "key": "enable-custom-address",
            "type": "checkbox",
            "name": "Enable Custom Address"
        },        
        {
            "key": "javascript-debug",
            "type": "checkbox",
            "name": "Enable Javascript Debug"
        }
    ],

    "crons": [],

    "compatibility": {
        "php-version-min": "7.3.0"        
    }
 }